@model BuildingManagementSystem.ConsumeApi.Models.BuildingViewModels.BuildingVM

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5 class="title"> Bina Güncelle</h5>
        </div>
        <div class="card-body">
            <form asp-action="UpdateBuilding">

                <div class="row">
                    <div class="col-md-6 pr-1">
                        <div class="form-group">
                            <label>Bina Adı</label>
                            <input type="text" asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 pl-1">
                        <input type="hidden" asp-for="BuildingID" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Bina Özellikleri</label>
                            <textarea rows="4" cols="80" asp-for="Properties" class="form-control"> </textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 pr-1">
                        <div class="form-group">
                            <input type="submit" value="Güncelle" class="btn btn-round btn-primary" />

                        </div>
                    </div>
                    <div class="col-md-6 pl-1">

                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}