@model IEnumerable<BuildingManagementSystem.ConsumeApi.Models.RoomViewModels.RoomVM>

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Oda Listesi</h4>
            <span><a asp-controller="Room" asp-action="AddRoom" class="btn btn-round btn-primary">Ekle</a></span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class=" text-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Floor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BuildingName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Properties)
                    </th>
                    <th>
                        Güncelle
                    </th>
                    <th>
                        Sil
                    </th>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Floor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BuildingName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Properties)
                            </td>
                            <td>
                                <a asp-controller="Room" asp-action="UpdateRoom" asp-route-id="@item.RoomID" class="btn btn-round btn-primary">Güncelle</a>
                            </td>
                            <td>
                                <a asp-controller="Room" asp-action="DeleteRoom" asp-route-id="@item.RoomID" class="btn btn-round btn-default">Sil</a>
                            </td>

                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>